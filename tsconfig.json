{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*", "./*.d"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest",
      "@types/uuid"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "**/*.d.ts"
  ]
}
